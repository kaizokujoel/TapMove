# ================================
# TapMove Backend Configuration
# ================================
# Copy to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# ================================
# Movement Network
# ================================
MOVEMENT_RPC_URL=https://aptos.testnet.porto.movementlabs.xyz/v1
MOVEMENT_FAUCET_URL=https://faucet.testnet.porto.movementlabs.xyz

# Contract Addresses (update after deployment)
PAYMENT_MODULE=0x_ADDRESS::payment
MERCHANT_MODULE=0x_ADDRESS::merchant

# ================================
# Database
# ================================
DATABASE_PATH=./data/tapmove.db

# ================================
# Security
# ================================
# Webhook secret for verifying callbacks
WEBHOOK_SECRET=your-webhook-secret-generate-random-string

# ================================
# CORS
# ================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# ================================
# Optional: Production URLs
# ================================
# MERCHANT_URL=https://your-merchant-terminal.vercel.app
# BASE_URL=https://your-backend.railway.app
